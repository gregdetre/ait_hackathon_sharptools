{
  "server": {
    "port": 8788,
    "host": "127.0.0.1"
  },
  "gitMonitor": {
    "mode": "folder-watch",
    "watchFolder": "../../",
    "staticFilePath": null,
    "pollInterval": 2000
  },
  
  "llm": {
    "enabled": true,
    "provider": "claude",
    "promptsFolder": "./prompts",
    "model": "claude-sonnet-4-20250514",
    "temperature": 0.1,
    "maxCompletionTokens": 50000
  },
  "repomix": {
    "enabled": false
  },
  "ui": {
    "showRawDiff": true,
    "refreshInterval": 1000
  }
}
